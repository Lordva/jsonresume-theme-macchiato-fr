{{#if resume.awards.length}}
<div class="container awards-container">
    {{> title value="Récompenses"}}

    {{#each resume.awards}}
        <section class="item">
            {{> section-header name=this.title }}

            {{#if awarder}}
            <h5 class="awarder">{{awarder}}</h5>
            {{/if}}

            {{#if summary}}
            <p class="résumé">{{summary}}</p>
            {{/if}}
        </section>
    {{/each}}
</div>
{{/if}}